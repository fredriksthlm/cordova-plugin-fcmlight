<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
           id="cordova-plugin-fcmlight"
      version="7.0.0">

    <name>FirebaseMessagingPlugin</name>
    <description>Cordova plugin for Firebase Cloud Messaging</description>
    <license>MIT</license>
    <keywords>cordova</keywords>
    <repo>https://github.com/fredriksthlm/cordova-plugin-fcmlight</repo>
    <issue>https://github.com/fredriksthlm/cordova-plugin-fcmlight/issues</issue>

    <js-module src="www/FirebaseMessaging.js" name="FirebaseMessaging">
        <merges target="cordova.plugins.firebase.messaging" />
    </js-module>

    <engines>
        <engine name="cordova" version=">=10.0.0"/>
        <engine name="cordova-android" version=">=10.0.0"/>
    </engines>

    <platform name="android">
              
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FirebaseMessaging">
                <param name="android-package" value="by.chemerisuk.cordova.firebase.FirebaseMessagingPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
               
        <config-file target="config.xml" parent="/*">
            <preference name="AndroidXEnabled" value="true" />
            <preference name="GradlePluginGoogleServicesEnabled" value="true" />
            <preference name="GradlePluginGoogleServicesVersion" value="4.3.10" />
        </config-file>


        <dependency id="cordova-support-android-plugin" />
               
        <framework src="com.google.firebase:firebase-messaging:23.0.5" />
        <source-file src="src/android/FirebaseMessagingPlugin.java" target-dir="src/by/chemerisuk/cordova/firebase/" />
        <resource-file src="www/google-services.json" target="app/google-services.json" />
    </platform>

</plugin>
